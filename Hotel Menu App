    #HOtel Menu App
menu = {
  "pizza" : 500,
  "Tea" : 20,
  "Burger" : 350,
  "Sandwich" : 200,
  }
total_bill = 0
print("Welcome to the everything hotel")
print("\n ------Menu----")
for item, price in menu.items():
    print(f"{item} : ₹{price}")
    while True:
        item = input("\nEnter item name(or 'exit' to finish): ").lower()
        if item == "exit":
            
            break
        
        if item in menu:
            qty = int(input("Enter quantity:"))
            cost = menu[item] * qty
            total_bill += cost
            print(f"{item} * {qty} = ₹{cost}")
        else:
            print("Item not available")
print("\n---------------")
print(f"Total Bill = ₹{total_bill}")
print("Thank You! Viasit again")




